<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateCommunity">

<!--    &lt;!&ndash;    送往后台的数据：问题标题、内容描述、（照片）&ndash;&gt;-->

    <com.example.schoolresourcepark.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/penLogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/create_community" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="欢迎创建新社区"
            android:textColor="@color/main_blue"
            android:textSize="22sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:background="@color/main_blue">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="26dp"
            android:text="社区头像"
            style="@style/TextView1"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="89dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="80dp"
            android:background="#F5F5F5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="9dp"
                android:src="@drawable/picture">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="上传头像"
                android:layout_gravity="center_vertical"
                style="@style/TextView1"/>
        </LinearLayout>

    </LinearLayout>
<!--    &lt;!&ndash;    送往后台：问题标题&ndash;&gt;-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="22dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社区名称"
            style="@style/TextView1"
            android:textSize="20dp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/border_input_box"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical">

            <EditText
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/resourceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginBottom="10dp"
            android:text="社区简介"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <!--送往后台：内容描述-->
    <EditText
        android:id="@+id/add_content"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:enabled="true"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:minLines="10"
        android:maxLines="15"
        android:scrollbars="vertical"
        android:background="@android:drawable/editbox_background"
        >
    </EditText>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_uploadResource"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="18dp"
            android:text="创建社区"
            android:textColor="@color/white"
            android:background="@drawable/btn_shape"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>