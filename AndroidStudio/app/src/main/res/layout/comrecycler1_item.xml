<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_border_textview"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/QueImg"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:src="@drawable/head"
            android:layout_margin="16dp"
            />

        <TextView
            android:id="@+id/QueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发布人昵称"
            style="@style/TextView1"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/QueTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/TextView1"
            android:text="3min前"
            android:layout_margin="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/QueContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="准备开发安卓的APP，请问大家有什么学习建议和指导吗？"
            style="@style/TextView1"
            android:textAlignment="textStart"
            android:layout_margin="16dp"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/collect1"
                android:background="@color/white"
                android:layout_marginLeft="86dp"
                />

            <TextView
                android:id="@+id/QueCollCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="55"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/reply"
                android:background="@color/white"
                android:layout_marginLeft="133dp"
                />

            <TextView
                android:id="@+id/QueComCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="2"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>


</LinearLayout>