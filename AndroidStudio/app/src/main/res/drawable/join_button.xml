<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--1、圆角 和 按下后背景变颜色-->
    <item android:state_pressed="false"><!-- 按钮未点击-->

        <shape>
            <gradient
                android:angle="270"
                android:endColor="#0F000000"
                android:startColor="#0F000000" />
            <stroke android:color="@color/main_blue" android:width="2dp"/>
            <solid android:color="@color/white" /> <!-- 填充的颜色：这里设置背景透明 -->
            <corners android:radius="20dip" /><!-- android:radius 弧形的半径 -->
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>

    <item android:state_pressed="true"> <!-- 按钮选中状态-->
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#0F000000"
                android:startColor="#0F000000" />
            <stroke android:color="@color/main_blue" android:width="2dp"/>
            <solid android:color="@color/border_color" /> <!-- 填充的颜色：这里设置背景透明 -->
            <corners android:radius="20dip" /><!-- android:radius 弧形的半径 -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>